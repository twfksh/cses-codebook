CompileFlags:
  Add:
    - -std=c++23
    - -Wall
    - -Wextra
    - -Wshadow
    - -Wconversion
    - -Wno-unused-parameter
    - -Wno-unused-variable
    - -Wno-unused-result
    - -Wfatal-errors
  Remove:
    - -fcoroutines-ts
    - -frounding-math

Index:
  Background: Build
  StandardLibrary: Yes

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  Designators: Yes

Hover:
  ShowAKA: Yes

Diagnostics:
  ClangTidy:
    Add:
      - bugprone-*
      - performance-*
      - readability-*
    Remove:
      - modernize-*
      - cppcoreguidelines-*
      - misc-*
      - readability-identifier-length
      - readability-magic-numbers
      - readability-braces-around-statements
      - cppcoreguidelines-avoid-magic-numbers

Completion:
  AllScopes: Yes
